{
  "name": "imo-html",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "css": "npm-run-all css-compile css-prefix-main css-minify-main",
    "css-compile": "npm-run-all --parallel css-compile-main",
    "css-compile-main": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/main.scss dist/css/main.css",
    "css-lint-main": "stylelint \"src/scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css-main": "npm-run-all css-compile-main css-prefix-main css-minify-main",
    "css-minify-main": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css",
    "css-prefix-main": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "dist": "npm-run-all --parallel css js vendors",
    "vendors": "node build/vendors.js",
    "js-copy": "cross-env-shell shx mkdir -p dist/js && cross-env-shell shx cp -r src/js/ dist/",
    "assets-copy": "cross-env-shell shx cp -r src/img/ dist/ && cross-env-shell shx cp -r src/fonts/ dist/",
    "html-copy": "cross-env-shell shx mkdir -p dist && cross-env-shell shx cp src/*.html dist/",
    "js": "npm-run-all js-copy js-minify",
    "js-minify": "uglifyjs --compress typeofs=false --mangle --comments \"/^!/\" --output dist/js/theme.min.js dist/js/theme.js",
    "lint": "npm-run-all --parallel js-lint css-lint",
    "watch": "npm-run-all --parallel watch-*",
    "watch-assets": "npm run assets-copy",
    "watch-html": "nodemon --watch src/*.html --ext html --exec \"npm run html-copy\"",
    "watch-css-main": "nodemon --watch src/scss/ --ext scss --exec \"npm run css-main\"",
    "watch-js-main": "nodemon --watch src/js/ --ext js --exec \"npm run js\""
  },
  "author": "Milos",
  "license": "ISC",
  "devDependencies": {
    "clean-css-cli": "^4.2.1",
    "concat": "^1.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "find-unused-sass-variables": "^0.3.2",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "jquery": "^3.4.1",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.15.0",
    "postcss-cli": "^6.1.1",
    "shx": "^0.3.2",
    "sinon": "^7.2.3",
    "stylelint": "^9.10.1",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "headroom.js": "^0.11.0",
    "waypoints": "^4.0.1",
    "@fancyapps/fancybox": "^3.5.7"
  }
}
